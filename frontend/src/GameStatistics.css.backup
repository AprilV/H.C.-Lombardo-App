  text-align: center;
  margin-bottom: 40px;
  padding: 30px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  color: white;
}

.stats-header h1 {
  margin: 0 0 10px 0;
  font-size: 2.5rem;
  font-weight: 700;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.stats-header .subtitle {
  margin: 0;
  font-size: 1.2em;
  opacity: 0.95;
  font-weight: 300;
}

/* View Mode Tabs */
.view-mode-tabs {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-bottom: 40px;
}

.tab-button {
  padding: 15px 35px;
  font-size: 1.1em;
  font-weight: 600;
  border: 2px solid #667eea;
  background: white;
  color: #667eea;
  border-radius: 30px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
}

.tab-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
}

.tab-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: #764ba2;
}

/* Section Headers */
.section-header {
  text-align: center;
  margin-bottom: 30px;
}

.section-header h2 {
  font-size: 2em;
  color: #2d3748;
  margin: 0 0 10px 0;
}

.section-header p {
  color: #718096;
  font-size: 1.1em;
  margin: 0;
}

/* Current Season View */
.current-season-view {
  background: white;
  border-radius: 15px;
  padding: 40px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
}

.team-selector-card {
  background: linear-gradient(135deg, #f6f8fb 0%, #e9ecef 100%);
  padding: 25px;
  border-radius: 12px;
  margin-bottom: 30px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
}

.team-selector-card label {
  display: block;
  font-size: 1.1em;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12px;
}

.team-dropdown {
  width: 100%;
  padding: 15px 20px;
  font-size: 1.05em;
  border: 2px solid #cbd5e0;
  border-radius: 8px;
  background: white;
  color: #2d3748;
  cursor: pointer;
  transition: all 0.3s ease;
}

.team-dropdown:hover {
  border-color: #667eea;
}

.team-dropdown:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

/* Stats Display - Current */
.stats-display-current {
  margin-top: 30px;
}

.team-header-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12px;
  color: white;
  margin-bottom: 25px;
  box-shadow: 0 6px 25px rgba(102, 126, 234, 0.3);
}

.team-header-card h3 {
  margin: 0;
  font-size: 2em;
  font-weight: 700;
}

.record-badge {
  padding: 12px 25px;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 25px;
  font-size: 1.4em;
  font-weight: 700;
  backdrop-filter: blur(10px);
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 20px;
}

.stat-card {
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  padding: 25px;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  border-color: #667eea;
}

.stat-card.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #764ba2;
  color: white;
}

.stat-card.primary:hover {
  border-color: #667eea;
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

.stat-card.secondary {
  background: linear-gradient(135deg, #38b2ac 0%, #319795 100%);
  border-color: #319795;
  color: white;
}

.stat-label {
  font-size: 0.95em;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 12px;
  opacity: 0.9;
}

.stat-value {
  font-size: 2.2em;
  font-weight: 700;
  line-height: 1;
}

/* Historical View */
.historical-view {
  background: white;
  border-radius: 15px;
  padding: 40px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
}

/* Instructions Card */
.instructions-card {
  background: linear-gradient(135deg, #fef5e7 0%, #fdebd0 100%);
  border-left: 5px solid #f39c12;
  border-radius: 10px;
  padding: 25px 30px;
  margin-bottom: 30px;
  box-shadow: 0 4px 15px rgba(243, 156, 18, 0.1);
}

.instructions-card h4 {
  margin: 0 0 15px 0;
  color: #d68910;
  font-size: 1.3em;
}

.instructions-card ol {
  margin: 0 0 15px 0;
  padding-left: 25px;
  color: #7d6608;
}

.instructions-card ol li {
  margin-bottom: 8px;
  line-height: 1.6;
}

.instructions-card .tip {
  margin: 0;
  padding: 12px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 6px;
  color: #7d6608;
  font-size: 0.95em;
}

/* Historical Controls */
.historical-controls {
  display: flex;
  gap: 20px;
  align-items: flex-end;
  flex-wrap: wrap;
  margin-bottom: 30px;
  padding: 25px;
  background: linear-gradient(135deg, #f6f8fb 0%, #e9ecef 100%);
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
}

.control-group {
  flex: 1;
  min-width: 200px;
}

.control-group label {
  display: block;
  font-size: 1.1em;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 10px;
}

.control-dropdown {
  width: 100%;
  padding: 14px 18px;
  font-size: 1.05em;
  border: 2px solid #cbd5e0;
  border-radius: 8px;
  background: white;
  color: #2d3748;
  cursor: pointer;
  transition: all 0.3s ease;
}

.control-dropdown:hover {
  border-color: #667eea;
}

.control-dropdown:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.add-stat-button {
  padding: 14px 28px;
  font-size: 1.05em;
  font-weight: 600;
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(72, 187, 120, 0.3);
}

.add-stat-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(72, 187, 120, 0.4);
}

.add-stat-button:disabled {
  background: #cbd5e0;
  cursor: not-allowed;
  box-shadow: none;
}

/* Stat Selectors */
.stat-selectors-container {
  margin-bottom: 30px;
}

.stat-selectors-container h4 {
  color: #2d3748;
  font-size: 1.3em;
  margin-bottom: 20px;
}

.stat-columns-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
}

.stat-selector-card {
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border: 2px solid #e2e8f0;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.stat-selector-card:hover {
  border-color: #667eea;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
}

.stat-selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.stat-selector-header label {
  font-weight: 600;
  color: #2d3748;
  font-size: 1.05em;
}

.remove-stat-btn {
  width: 30px;
  height: 30px;
  border: none;
  background: #fc8181;
  color: white;
  border-radius: 50%;
  font-size: 1.4em;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  line-height: 1;
  padding: 0;
}

.remove-stat-btn:hover {
  background: #f56565;
  transform: rotate(90deg);
}

.stat-selector-dropdown {
  width: 100%;
  padding: 12px 16px;
  font-size: 1em;
  border: 2px solid #cbd5e0;
  border-radius: 8px;
  background: white;
  color: #2d3748;
  cursor: pointer;
  transition: all 0.3s ease;
}

.stat-selector-dropdown:hover {
  border-color: #667eea;
}

.stat-selector-dropdown:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

/* Historical Stats Table */
.historical-stats-table {
  margin-top: 30px;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.historical-stats-table h3 {
  color: #2d3748;
  font-size: 1.8em;
  margin-bottom: 20px;
  text-align: center;
}

.table-container {
  overflow-x: auto;
  border-radius: 12px;
  box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
}

.stats-data-table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  border-radius: 12px;
  overflow: hidden;
}

.stats-data-table thead {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.stats-data-table th {
  padding: 18px 20px;
  text-align: left;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-size: 0.95em;
  border-bottom: 3px solid #764ba2;
}

.stats-data-table tbody tr {
  border-bottom: 1px solid #e2e8f0;
  transition: all 0.3s ease;
}

.stats-data-table tbody tr:hover {
  background: linear-gradient(135deg, #f6f8fb 0%, #e9ecef 100%);
}

.stats-data-table td {
  padding: 18px 20px;
  color: #2d3748;
  font-size: 1.05em;
}

.stat-cell {
  font-weight: 600;
  color: #667eea;
}

.row-number {
  background: linear-gradient(135deg, #f6f8fb 0%, #e9ecef 100%);
  font-weight: 700;
  color: #2d3748;
  width: 80px;
  text-align: center;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 80px 20px;
  color: #718096;
}

.empty-icon {
  font-size: 5em;
  margin-bottom: 20px;
  opacity: 0.5;
}

.empty-state h3 {
  font-size: 1.8em;
  color: #2d3748;
  margin: 0 0 15px 0;
}

.empty-state p {
  font-size: 1.2em;
  margin: 0;
}

/* Loading & Error States */
.loading, .error {
  text-align: center;
  padding: 60px 20px;
  font-size: 1.5em;
  color: #667eea;
}

.error {
  color: #f56565;
  background: #fff5f5;
  border: 2px solid #fc8181;
  border-radius: 12px;
  margin: 20px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .game-statistics {
    padding: 20px 10px;
  }

  .stats-header h1 {
    font-size: 2em;
  }

  .stats-header .subtitle {
    font-size: 1em;
  }

  .view-mode-tabs {
    flex-direction: column;
    gap: 10px;
  }

  .tab-button {
    width: 100%;
  }

  .current-season-view,
  .historical-view {
    padding: 25px 20px;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .historical-controls {
    flex-direction: column;
    align-items: stretch;
  }

  .add-stat-button {
    width: 100%;
  }

  .stat-columns-grid {
    grid-template-columns: 1fr;
  }

  .stats-data-table th,
  .stats-data-table td {
    padding: 12px 10px;
    font-size: 0.9em;
  }
}

@media (max-width: 480px) {
  .stats-header {
    padding: 20px;
  }

  .stats-header h1 {
    font-size: 1.6em;
  }

  .team-header-card {
    flex-direction: column;
    gap: 15px;
    text-align: center;
  }

  .team-header-card h3 {
    font-size: 1.5em;
  }

  .record-badge {
    font-size: 1.2em;
  }
}

/* À La Carte Stat Picker Styles */
.stat-picker-toggle {
  text-align: center;
  margin-bottom: 25px;
}

.toggle-picker-btn {
  padding: 15px 40px;
  font-size: 1.15em;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 30px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
}

.toggle-picker-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.stat-picker-panel {
  background: white;
  border-radius: 15px;
  padding: 30px;
  margin-bottom: 30px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  border: 2px solid #e2e8f0;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
  padding-bottom: 20px;
  border-bottom: 2px solid #e2e8f0;
}

.picker-header h3 {
  margin: 0;
  font-size: 1.8em;
  color: #2d3748;
}

.picker-actions {
  display: flex;
  gap: 10px;
}

.action-btn {
  padding: 10px 20px;
  font-size: 0.95em;
  font-weight: 600;
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
}

.action-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(72, 187, 120, 0.4);
}

.stat-categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
}

.stat-category-picker {
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  padding: 18px;
  transition: all 0.3s ease;
}

.stat-category-picker:hover {
  border-color: #667eea;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
}

.category-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
  padding-bottom: 12px;
  border-bottom: 2px solid #e2e8f0;
}

.category-picker-header h4 {
  margin: 0;
  font-size: 1.2em;
  color: #2d3748;
}

.category-picker-actions {
  display: flex;
  gap: 8px;
}

.mini-btn {
  padding: 6px 12px;
  font-size: 0.85em;
  font-weight: 600;
  background: #e2e8f0;
  color: #2d3748;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.mini-btn:hover {
  background: #cbd5e0;
}

.stat-checkboxes {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.stat-checkbox-label {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
  user-select: none;
}

.stat-checkbox-label:hover {
  background: rgba(102, 126, 234, 0.1);
}

.stat-checkbox-label input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: #667eea;
}

.stat-checkbox-label span {
  flex: 1;
  color: #4a5568;
  font-size: 0.95em;
}

.stat-checkbox-label input[type="checkbox"]:checked + span {
  color: #2d3748;
  font-weight: 600;
}

/* Team Logo Display */
.team-logo-display {
  text-align: center;
  margin-bottom: 25px;
  padding: 25px;
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border-radius: 12px;
  border: 2px solid #e2e8f0;
}

.team-logo-display .team-logo {
  width: 120px;
  height: 120px;
  object-fit: contain;
  margin-bottom: 15px;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  transition: transform 0.3s ease;
}

.team-logo-display .team-logo:hover {
  transform: scale(1.05);
}

.team-logo-display h3 {
  margin: 10px 0;
  font-size: 1.8em;
  color: #2d3748;
}

.team-logo-display .team-record-badge {
  display: inline-block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 12px 25px;
  border-radius: 25px;
  font-size: 1.4em;
  font-weight: 700;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

/* Stats Display for À La Carte */
.stats-display {
  animation: fadeIn 0.5s ease;
}

.stat-category {
  margin-bottom: 25px;
  border: 2px solid #e2e8f0;
  border-radius: 10px;
  overflow: hidden;
  background: white;
}

.category-title {
  background: linear-gradient(135deg, #f6f8fb 0%, #e9ecef 100%);
  padding: 15px 20px;
  margin: 0;
  font-size: 1.2em;
  color: #2d3748;
  border-bottom: 2px solid #e2e8f0;
}

.stat-rows {
  padding: 15px 20px;
}

.stat-rows .stat-row {
  display: flex;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #f7fafc;
}

.stat-rows .stat-row:last-child {
  border-bottom: none;
}

.stat-rows .stat-label {
  color: #718096;
  font-size: 0.95em;
}

.stat-rows .stat-value {
  font-weight: 700;
  color: #2d3748;
  font-size: 1.05em;
}

/* No Data Message */
.no-data-message {
  text-align: center;
  padding: 80px 20px;
  color: #a0aec0;
}

.no-data-message p {
  font-size: 1.2em;
  margin: 0;
}

/* Responsive for À La Carte */
@media (max-width: 768px) {
  .stat-categories-grid {
    grid-template-columns: 1fr;
  }

  .picker-header {
    flex-direction: column;
    gap: 15px;
    align-items: flex-start;
  }

  .picker-actions {
    width: 100%;
    justify-content: stretch;
  }

  .action-btn {
    flex: 1;
  }
}

/* ============================================ */
/* WEEKLY SCHEDULE VIEW STYLES */
/* ============================================ */

/* View Mode Toggle */
.view-mode-toggle {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin: 20px 0 30px 0;
}

.view-mode-btn {
  padding: 12px 30px;
  font-size: 1.1em;
  font-weight: 600;
  border: 2px solid #667eea;
  background: white;
  color: #667eea;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.view-mode-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
}

.view-mode-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

/* Schedule Filters */
.schedule-filters {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-bottom: 25px;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 10px 20px;
  font-size: 0.95em;
  font-weight: 600;
  border: 2px solid #e2e8f0;
  background: white;
  color: #4a5568;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.filter-btn:hover {
  border-color: #667eea;
  color: #667eea;
}

.filter-btn.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

/* Head-to-Head Alert */
.head-to-head-alert {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  padding: 15px 20px;
  border-radius: 10px;
  margin-bottom: 20px;
  text-align: center;
  box-shadow: 0 4px 10px rgba(255, 215, 0, 0.3);
}

.head-to-head-alert h4 {
  margin: 0 0 5px 0;
  color: #744210;
  font-size: 1.1em;
}

.head-to-head-alert p {
  margin: 0;
  color: #8b5a00;
  font-weight: 600;
}

/* Division Stats Widget */
.division-stats-widget {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 15px;
  border-radius: 10px;
  margin: 20px 0;
  text-align: center;
  color: white;
}

.division-stats-widget h4 {
  margin: 0 0 10px 0;
  font-size: 0.9em;
  text-transform: uppercase;
  letter-spacing: 1px;
  opacity: 0.9;
}

.division-record {
  font-size: 2em;
  font-weight: 700;
}

.division-games-total {
  display: block;
  font-size: 0.5em;
  opacity: 0.8;
  margin-top: 5px;
}

/* Schedule Table */
.schedule-table {
  margin-top: 20px;
}

.schedule-game-row {
  background: white;
  border-radius: 10px;
  margin-bottom: 10px;
  overflow: hidden;
  transition: all 0.3s ease;
  border-left: 5px solid #e2e8f0;
}

.schedule-game-row.division-game {
  border-left-color: #667eea;
  background: linear-gradient(to right, #f0f4ff 0%, white 10%);
}

.schedule-game-row.win {
  border-left-color: #48bb78;
}

.schedule-game-row.loss {
  border-left-color: #f56565;
}

.schedule-game-row.upcoming {
  border-left-color: #cbd5e0;
  opacity: 0.7;
}

.schedule-game-row:hover {
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
}

/* Game Row Header */
.game-row-header {
  display: grid;
  grid-template-columns: 100px 80px 1fr 120px 40px;
  align-items: center;
  padding: 15px;
  cursor: pointer;
  gap: 15px;
}

.game-week {
  font-weight: 700;
  color: #2d3748;
  display: flex;
  align-items: center;
  gap: 5px;
}

.division-badge {
  font-size: 1.2em;
}

.common-opp-badge {
  font-size: 1.1em;
  filter: drop-shadow(0 0 3px rgba(255, 215, 0, 0.6));
}

.game-date {
  color: #718096;
  font-size: 0.9em;
}

.game-matchup {
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: 600;
  color: #2d3748;
}

.opponent-logo-small {
  width: 30px;
  height: 30px;
  object-fit: contain;
}

.game-result {
  text-align: right;
}

.result-badge {
  padding: 6px 12px;
  border-radius: 15px;
  font-weight: 700;
  font-size: 0.9em;
}

.win-badge {
  background: #c6f6d5;
  color: #22543d;
}

.loss-badge {
  background: #fed7d7;
  color: #742a2a;
}

.upcoming-badge {
  background: #e2e8f0;
  color: #4a5568;
  padding: 6px 12px;
  border-radius: 15px;
  font-weight: 600;
  font-size: 0.9em;
}

.expand-icon {
  color: #a0aec0;
  font-size: 0.8em;
  text-align: center;
}

/* Game Row Details (Expanded) */
.game-row-details {
  padding: 20px;
  background: #f7fafc;
  border-top: 1px solid #e2e8f0;
}

.game-stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 15px;
}

.game-stats-grid .stat-item {
  background: white;
  padding: 12px;
  border-radius: 8px;
  border-left: 3px solid #667eea;
}

.game-stats-grid .stat-label {
  display: block;
  font-size: 0.85em;
  color: #718096;
  margin-bottom: 5px;
}

.game-stats-grid .stat-value {
  display: block;
  font-size: 1.3em;
  font-weight: 700;
  color: #2d3748;
}

.no-games-message {
  text-align: center;
  padding: 40px;
  color: #a0aec0;
  font-style: italic;
}

/* Responsive for Schedule View */
@media (max-width: 768px) {
  .game-row-header {
    grid-template-columns: 70px 60px 1fr 30px;
    gap: 10px;
    font-size: 0.9em;
  }

  .game-date {
    display: none;
  }

  .game-result {
    grid-column: 1 / -1;
    text-align: center;
    margin-top: 10px;
  }

  .game-stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .schedule-filters {
    gap: 5px;
  }

  .filter-btn {
    padding: 8px 15px;
    font-size: 0.85em;
  }
}

